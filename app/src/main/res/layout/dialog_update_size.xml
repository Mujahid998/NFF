<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/bg_dialog"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/add_category"
        android:id="@+id/sizeTitle"
        android:textSize="@dimen/size_medium"
        android:textColor="@color/purple_500"
        android:layout_marginHorizontal="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sizeTitle"
        android:id="@+id/editLayout"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Size"
            android:paddingHorizontal="10dp"
            android:gravity="start|center"
            android:inputType="text"
            android:id="@+id/size_box"
            android:layout_gravity="center"
            android:background="@drawable/bg_gray_lite"
            android:layout_marginHorizontal="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Points"
            android:gravity="start|center"
            android:paddingHorizontal="10dp"
            android:inputType="text"
            android:id="@+id/points_box"
            android:layout_gravity="center"
            android:background="@drawable/bg_gray_lite"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editLayout"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Cancel"
            android:id="@+id/cancelSizeBtn"
            android:textColor="@color/purple_500"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Add"
            android:id="@+id/addSizeBtn"
            android:background="@drawable/bg_button_primary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            />




    </LinearLayout>
</RelativeLayout>
